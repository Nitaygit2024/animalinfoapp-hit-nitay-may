<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView for displaying the animal image in a circle -->
    <ImageView
        android:id="@+id/edit_animal_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/animal_image"
        android:src="@drawable/silhouetteprofile" />

    <EditText
        android:id="@+id/edit_animal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_animal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Animal Description"
        android:textSize="18sp"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <Button
        android:id="@+id/save_animal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save / שמור" />
</LinearLayout>
